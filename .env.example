# Azure Web PubSub Connection (External Resource)
VITE_WEBPUBSUB_ENDPOINT=https://your-webpubsub.webpubsub.azure.com
VITE_WEBPUBSUB_HUB_NAME=cortana

# Connection String (for JWT token generation - replace with your own)
VITE_WEBPUBSUB_CONNECTION_STRING=Endpoint=https://your-webpubsub.webpubsub.azure.com;AccessKey=YOUR_ACCESS_KEY_HERE;Version=1.0;

# Client Access URL (generated using Azure Web PubSub SDK with proper credentials)
VITE_WEBPUBSUB_CLIENT_URL=wss://your-webpubsub.webpubsub.azure.com/client/hubs/cortana?access_token=YOUR_JWT_TOKEN_HERE

# Access Key (for generating client access URLs - replace with your own)
VITE_WEBPUBSUB_ACCESS_KEY=YOUR_ACCESS_KEY_HERE

# Azure AI Speech Services (High-Quality TTS)
VITE_AZURE_SPEECH_KEY=YOUR_AZURE_SPEECH_KEY_HERE
VITE_AZURE_SPEECH_REGION=YOUR_AZURE_REGION

# Debug logging
VITE_DEBUG=true

# Note: Replace all placeholder values with your own Azure resource credentials
# Follow the setup guide in README.md for detailed configuration instructions